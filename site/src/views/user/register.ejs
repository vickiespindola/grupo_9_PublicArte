<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partial/head') %>

<body class="formulario register">
    <!-- Header -->
    <%- include('../partial/header') %>

    <!-- Main -->
    <main>
        <h2>¡Crea tu cuenta!</h2>
        <form action="/users/register" enctype="multipart/form-data" method="POST">
            <div>
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" placeholder="Ingrese nombre..."
                    value=<%= locals.old && old.nombre ? old.nombre : null %>>
                <% if(locals.errors && errors.nombre){ %>
                <small > <%= errors.nombre.msg %> </small>
                <% } %>
            </div>
            <div>
                <label for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" placeholder="Ingrese apellido..."
                    value=<%= locals.old && old.apellido ? old.apellido : null %>>
                <% if(locals.errors && errors.apellido){ %>
                <small > <%= errors.apellido.msg %> </small>
                <% } %>
            </div>
            <div>
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" placeholder="Ingrese e-mail"
                    value=<%= locals.old && old.email ? old.email : null %>>
                <% if(locals.errors && errors.email){ %>
                <small > <%= errors.email.msg %> </small>
                <% } %>
                <small id="smallemail"></small>
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Ingrese contraseña...">
                <% if(locals.errors && errors.password){ %>
                <small > <%= errors.password.msg %> </small>
                <% } %>
                <small id= "smallpass"></small>
            </div>
            <div>
                <label for="password2">Contraseña</label>
                <input type="password" name="password2" id="password2" placeholder="Ingrese contraseña...">
                <% if(locals.errors && errors.password2){ %>
                <small > <%= errors.password2.msg %> </small>
                <% } %>
                <small id= "smallpass2"></small>
            </div>
            <div>
                <label for="avatar">Seleccionar una imagen</label>
                <input type="file" name="avatar" id="avatar" accept=".jpg .png"
                    value=<%= locals.old && old.avatar ? old.avatar : null %>>
            </div>
            <!-- <div class="user">
                <label for="role">Perfil del usuario</label>
                <span>
                    <div>
                        <input type="radio" name="usuario" value="comprador">
                        <label for="comprador">Comprador</label>
                    </div>
                    <div>
                        <input type="radio" name="usuario" value="vendedor">
                        <label for="vendedor">Vendedor</label>
                    </div>
                </span>
                <% if(locals.errors && errors.role){ %>
                <small> <%= errors.role.msg %> </small>
                <% } %>
            </div> -->
            <button type="submit" id="crear">Crear cuenta</button>
        </form>

        <section>
            <h4>Ó crea tu cuenta con:</h4>
            <div>
                <button><i class="fab fa-google"></i> Google</button>
                <button><i class="fab fa-facebook"></i> Facebook</button>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('../partial/footer') %>

</body>
<script src="/javascript/register.js"></script>
</html>


