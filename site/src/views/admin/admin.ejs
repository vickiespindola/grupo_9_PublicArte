<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partial/head.ejs') %>

<body class="admin">
    <!--Header-->
    <%- include('./partials/header.ejs')  %>

    <!--Main-->
    <main>

        <div class="create">
            <h4>Productos</h4>
            <div>
                <p>Agregar producto</p>
                <a href="/admin/create">
                    <div class="d-grid gap-2 d-md-block boton">
                        <button class="btn btn-primary" type="button">Crear</button>
                    </div>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">titulo</th>
                        <th scope="col" class="dato description">descripcion</th>
                        <!-- <th scope="col" class="dato">imagen</th> -->
                        <th scope="col">marca</th>
                        <th scope="col" class="dato2">categoria</th>
                        <th scope="col">precio</th>
                        <th scope="col" class="dato">autor</th>
                        <th scope="col">acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(element => { %>
                    <tr>
                        <th scope="row"><%= element.id %></th>
                        <td><%= element.name %></td>
                        <td class="dato description"><%= element.description %></td>
                        <!-- <td class="dato"><img src="/img/products/<%= element.images %>" alt=""></td> -->
                        <td><%= element.users.brand %></td>
                        <td class="dato2"><%= element.categories.name %></td>
                        <td><%= element.price %></td>
                        <td class="dato"><%= (element.users.name + ' ' +element.users.last_name) %></td>
                        <td><a href="/admin/edit/<%= element.id %>">
                                <div>
                                    <button class="btn btn-success">Editar</button>
                                </div>
                            </a>
                            <form action="/admin/delete/<%= element.id %>?_method=DELETE" method="POST">
                                <div>
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </main>
    <!-- Footer -->
    <%- include('../partial/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous">
    </script>
</body>

</html>